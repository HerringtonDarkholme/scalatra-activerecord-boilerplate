-@ val message: String = "Hello"

.hero-unit
  h1 #{message}
  .row
    .span4
      h2 CRUD Sample
      ul#crud_menu.nav.nav-pills.nav-stacked
        li
          a(href='/word') word

:javascript
  $(document).ready(function() {
    $("#crud_menu li, #relation_menu li").mouseover(function() {
      $(this).addClass("active");
    }).mouseout(function() {
      $(this).removeClass("active");
    });
  });
